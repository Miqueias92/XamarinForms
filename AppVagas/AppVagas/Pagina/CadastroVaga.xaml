<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppVagas.Pagina.CadastroVaga">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>
                    <Entry x:Name="Vaga" Placeholder="Vaga"/>
                    <Entry x:Name="Empresa" Placeholder="Empresa"/>
                    <Entry x:Name="Quantidade" Placeholder="Quantidade"/>
                    <Entry x:Name="Cidade" Placeholder="Cidade"/>
                    <Entry x:Name="Salario" Placeholder="Salário"/>
                    <Editor x:Name="Descricao" Placeholder="Descrição"
                    HeightRequest="200"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Tipo de contratação"/>
                        <Label Text="CLT"/>
                        <Switch x:Name="TipoContratacao"/>
                        <Label Text="PJ"/>
                    </StackLayout>
                    <Entry x:Name="Telefone" Placeholder="Telefone"/>
                    <Entry x:Name="Email" Placeholder="E-mail"/>

                    <Button Text="Salvar" Clicked="goSalvar"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>